{
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 9199
    },
    "ui": {
      "host":"127.0.0.1",
      "port": 4200
    },
    "hub": {
	"host": "127.0.0.1",
        "port": 4501
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9001
    },
    "hosting": {
      "port": 5100
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9300,
      "rules": "storage.rules"
    },
    "ui": {
      "enabled": true,
      "port": 4100
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
